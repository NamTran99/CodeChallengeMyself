<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FocusClickForeground">
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_icon_no_background_color</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FocusClickBackground">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_icon_no_background_color</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Button.Default" parent="ThemeOverlay.Material3.Button" >
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="ImageClick" parent="FocusClickBackground">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <declare-styleable name="ViewStrokeBg">
        <attr name="cornerRadius" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="ai_background" format="color" />
        <attr name="startColor" format="color" />
        <attr name="centerColor" format="color" />
        <attr name="endColor" format="color" />
    </declare-styleable>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>